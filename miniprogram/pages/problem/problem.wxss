/* pages/problem/problem.wxss */
#problem {
  color: #394481;
  font-family: 'DFPSong';
}
#problem .bg {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: -2;
  transform: scale(2, 2);
}
#problem .logo {
  padding-top: 58rpx;
}
#problem .logo image {
  width: 164rpx;
  height: 76rpx;
}
#problem .user-url image {
  width: 76rpx;
  height: 76rpx;
  border-radius: 38rpx;
  margin: 22rpx 0 10rpx 0;
}
#problem .user-name {
  font-size: 24rpx;
  margin-bottom: 14rpx;
}
#problem .title-three {
  font-size: 35rpx;
  margin-bottom: 59rpx;
}
#problem .question input, #problem .question text {
  display: inline-block;
  height: 60rpx;
  font-size: 35rpx;
  vertical-align: top;
  line-height: 60rpx;
}
#problem .question input {
  border-bottom: 2px solid #3a457e;
  width: 300rpx;
}
#problem .change {
  margin: 41rpx 0 44rpx 0;
}
#problem .change view {
  display: inline-block;
}
#problem .change text:first-child {
  font-size: 24rpx;
  margin-right: 10rpx;
}
#problem .change text:last-child {
  display: inline-block;
  width: 31rpx;
  height: 31rpx;
  background-color: #fff;
  border-radius: 15.5rpx;
  line-height: 24rpx;
}
#problem .change text:last-child::before {
  font-size: 26rpx;
}

#problem .main {
  position: relative;
  width: 100%;
  height: 480rpx;
}
#problem .main > view {
  position: absolute;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
}
#problem .main > view > text:first-child {
  position: absolute;
  background-size:230%;
  background-position: center;
  background-image: url(https://raw.githubusercontent.com/18355166248/images-jl/master/2-3-bg.png);
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  border-radius: 50%;
  animation: fadebg 2000ms infinite;
  z-index: -1;
}
@keyframes fadebg {
  0% {
    opacity: 1
  }
  50% {
    opacity: .1
  }
  100% {
    opacity: 1
  }
}
#problem .main > view > text:last-child{
  background-color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: background-color 200ms linear; 
}
#problem .main > view > text:last-child.active {
  background-color: #394481;
  color: #fff;
}

#problem .btn_list {
  margin-top: 60rpx;
}
#problem .btn_list image {
  width: 210rpx;
  height: 61rpx;
}
#problem .btn_list image:first-child {
  margin-right: 48rpx;
}